@model Session9Pokemon.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gym)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gym)
        </dd>
    </dl>
    <div>
        <h2>Pokemans Caught</h2>
        <ul>
            @foreach(var i in Model.Catches)
            {
                <li>@i.Pokemon.Name</li>
            }
        </ul>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
